<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211859"
    android:orientation="vertical"
    android:layout_weight="3"
    tools:context=".AddNoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="0dp"
        android:weightSum="3"
        android:background="#211859">

        <Button
            android:id="@+id/register"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#261A73"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Rejestracja"
            android:textColor="#F2E205"
            android:textSize="15dp"
            android:onClick="openReg"/>

        <TextView
            android:id="@+id/mainNote"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="0dp"
            android:background="#27188C"
            android:gravity="center"
            android:text="Note"
            android:textColor="#F2E205"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:backgroundTint="#261A73"
            android:gravity="center|right"
            android:padding="10dp"
            android:text="Logowanie"
            android:textColor="#F2E205"
            android:textSize="15dp"
            android:onClick="openLogIn"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/bottom_line"
            android:ems="10"
            android:hint="Tytuł"
            android:textColorHint="#F2E205"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#F2E205"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:ems="10"
            android:hint="Treść"
            android:textColorHint="#F2E205"
            android:textSize="15dp"
            android:gravity="left"
            android:textColor="#F2E205" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:weightSum="2"
        android:gravity="right">

        <Button
            android:id="@+id/goBack"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#D9D059"
            android:gravity="center"
            android:text="Odrzuć"
            android:textSize="20dp"
            android:textColor="#27188C"
            android:onClick="backToSelect"/>

        <Button
            android:id="@+id/addNote"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#D9D059"
            android:gravity="center"
            android:text="Zapisz"
            android:textSize="20dp"
            android:textColor="#27188C"/>
    </LinearLayout>

</LinearLayout>