<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211859"
    android:orientation="vertical"
    android:layout_weight="3"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="0dp"
        android:weightSum="3"
        android:background="#211859">

        <Button
            android:id="@+id/register"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#261A73"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Rejestracja"
            android:textColor="#F2E205"
            android:textSize="15dp"
            android:onClick="openReg"/>

        <TextView
            android:id="@+id/mainNote"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="0dp"
            android:background="#27188C"
            android:gravity="center"
            android:text="Note"
            android:textColor="#F2E205"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:backgroundTint="#261A73"
            android:gravity="center|right"
            android:padding="10dp"
            android:text="Logowanie"
            android:textColor="#F2E205"
            android:textSize="15dp"
            android:onClick="openLogIn"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        android:scrollbars = "vertical">

        <LinearLayout
            android:id="@+id/radioFontSize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textFontSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F2E205"
                android:text="Rozmiar czcionki" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="50dp">

                <RadioButton
                    android:id="@+id/small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F2CB05"
                    android:text="Mała" />

                <RadioButton
                    android:id="@+id/middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F2CB05"
                    android:text="Średnia" />

                <RadioButton
                    android:id="@+id/big"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F2CB05"
                    android:text="Duża" />

                <RadioButton
                    android:id="@+id/veryBig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F2CB05"
                    android:text="Bardzo duża" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/radioColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F2CB05"
                android:text="Zmień kolor notatek" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="50dp">

                <RadioButton
                    android:id="@+id/red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F2CB05"
                    android:text="Czerwona" />

                <RadioButton
                    android:id="@+id/green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F2CB05"
                    android:text="Zielona" />

                <RadioButton
                    android:id="@+id/blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F2CB05"
                    android:text="Niebieska" />

                <RadioButton
                    android:id="@+id/orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F2CB05"
                    android:text="Pomarańczowa" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <Button
            android:id="@+id/setup"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#D9D059"
            android:gravity="center"
            android:text="Odrzuć"
            android:textSize="26dp"
            android:textColor="#27188C"
            android:onClick="backStart"/>

        <Button
            android:id="@+id/plusBtn"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#D9D059"
            android:gravity="center"
            android:text="Zapisz"
            android:textSize="26dp"
            android:textColor="#27188C"
            android:onClick="backStart"/>

    </LinearLayout>

</LinearLayout>